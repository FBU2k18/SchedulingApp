<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTextYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvFrom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:gravity="left"
        android:maxWidth="270dp"
        android:padding="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:text=""
        android:textColor="@color/lightText" />

    <TextView
        android:id="@+id/tvFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="" />

    <TextView
        android:id="@+id/tvTextMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvFrom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:maxWidth="270dp"
        android:padding="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp"
        android:text=""
        android:textColor="@color/lightText" />

    <ImageView
        android:id="@+id/ivPicYou"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/tvTextYou"
        android:layout_alignTop="@+id/tvTextYou" />

    <ImageView
        android:id="@+id/ivPicMe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/tvTextMe"
        android:layout_alignTop="@+id/tvTextYou" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTextYou"
        android:layout_centerHorizontal="true" />

</RelativeLayout>